

<div class="container-recherche <%= "bot-side" if current_page?(places_path)%>  <%= "background-gray-opacity" if current_page?(places_path)%>  ">

  <div class="search-bar">

  <%= simple_form_for places_path, html: { class: "simple_form search", novalidate: "novalidate" } do |form| %>
    <%= form.input :address,
      input_html: { data: { address_autocomplete_target: "address" } },
      wrapper_html: { data: { controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"] } }
    %>

    <div class="search-form-control form-group">
      <%= form.text_field :query, class: "form-control string required #{'background-white-opacity' if current_page?(places_path)}", placeholder: 'Adresse', id: 'search_query' %>
        <%= form.input :address,
      input_html: { data: { address_autocomplete_target: "address" } },
      wrapper_html: { data: { controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"] } }
    %>
      <i class="fas fa-search errspan" style="color: #f4f4f4"></i>
    </div>

    <%= form.submit "Rechercher" %>
<% end %>


  </div>

    <div class="filtres">
            <%= link_to places_path(query: "Électronique") do %>
              <div class="filtre <%= "background-white-opacity" if current_page?(places_path)%>">
                🪫  Électronique
              </div>
            <% end %>
            <%= link_to places_path(query: "Organique") do %>
              <div class="filtre  <%= "background-white-opacity" if current_page?(places_path)%>">
                🍌  Organique
              </div>
            <% end %>
            <%= link_to places_path(query: "Vêtements") do %>
              <div class="filtre  <%= "background-white-opacity" if current_page?(places_path)%>">
                👚  Vêtements
              </div>
            <% end %>
            <%= link_to places_path(query: "Filtre") do %>
              <div class=" filtre  <%= "background-white-opacity" if current_page?(places_path)%>">
                🪑  Meubles
              </div>
            <% end %>
            <%= link_to places_path(query: "Mégots") do %>
              <div class="filtre  <%= "background-white-opacity" if current_page?(places_path)%>">
                🚬  Mégots
              </div>
            <% end %>
            <%= link_to places_path(query: "Autre") do %>
              <div class="filtre  <%= "background-white-opacity" if current_page?(places_path)%>">
                🗑️  Autre
              </div>
            <% end %>

    </div>
</div>
